! Xft settings
Xft.dpi:				96
Xft.antialias: 			true
Xft.hinting: 			true
Xft.hintstyle: 			hintslight
Xft.rgba:				rgb

! URxvt settings
URxvt*termName:			rxvt-256color
URxvt.depth:			32
URxvt.geometry: 		120x30
URxvt.borderless:		true

URxvt*font:				xft:Hack:size=12:style=Regular,\
						xft:DejaVu Sans Mono:size=12:style=Medium 
!						xft:Font Awesome 5 Free Regular:size12:style=Regular
URxvt*boldFont:			xft:Hack:bold:size=12:style=Bold
URxvt.italicFont:		xft:Hack:italic:size=12:style=Italic
URxvt.boldItalicFont:	xft:Hack:bold:italic:size=12:style=Bold Italic

URxvt*letterSpace:		0
URxvt.lineSpace:		0
URxvt.cursorBlink: 		true
URxvt.scrollBar: 		false
URxvt.transparent: 		true
URxvt.cursorUnderline:  false
URxvt.internalBorder: 	25

! disable default bindings
URxvt.iso14755:			false
URxvt.iso14755_52:		false

! loading perl extentions
URxvt.perl-ext-common:	resize-font,default,clipboard

! resize-font
URxvt.resize-font.smaller: C-j
URxvt.resize-font.bigger:  C-k

! copy-paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy
URxvt.keysym.Shift-Control-V:   perl:clipboard:paste
URxvt.clipboard.autocopy:		true

URxvt.fading: 0
URxvt.tintColor: #ffffff
URxvt.shading: 0
URxvt.inheritPixmap: False

!!!! COLORS
*.foreground:  #c2c8d7
*.background:  [70]#1c262b
*.cursorColor: #e8e9ed
