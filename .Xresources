!! Bold, Italic, Underline
URxvt.colorBD:     #ffea2e
URxvt.colorIT:	   #aa4dbc
URxvt.colorUL:	   #ee2b2a

! rofi settings
rofi.modi:			run
rofi.width:			100
rofi.padding:		500
rofi.opacity:		60
rofi.lines:			5
rofi.font:			mono 14
rofi.bw:			0

rofi.color-enabled:	true
! state				bg		fg		bgalt	hlbg	hlfg
rofi.color-normal:	#1c262b,#c2c8d7,#1c262b,#ffea2e,#1c262b
rofi.color-active:	#1c262b,#ffea2e,#1c262b,#fff163,#c2c8d7
rofi.color-urgent:	#1c262b,#ee2b2a,#1c262b,#dc5c60,#c2c8d7
!					bg		border	separator
rofi.color-window:	#801c262b,#c2c8d7,#b3b8c3
