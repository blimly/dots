! Xft settings
Xft.dpi:				82
Xft.antialias: 			true
Xft.hinting: 			true
Xft.hintstyle: 			hintslight
Xft.rgba:				rgb

xterm*faceName: Monospace
xterm*faceSize: 12

! URxvt settings
*termName:			rxvt-256color
URxvt.depth:			32
URxvt.geometry: 		120x30
URxvt.borderless:		true

*letterSpace:			0
*font:					xft:Fairfax:size=15:style=Medium:antialias=true \
						xft:Font Awesome 5 Free Regular:size12:style=Regular
*boldFont:				xft:Fairfax:bold:size=15:style=Bold:antialias=true
*italicFont:			xft:Fairfax:italic:size=15:style=Italic:antialias=true
*boldItalicFont:		xft:Fairfax:bold:italic:size=15:style=Bold Italic:antialias=true

URxvt.lineSpace:		0
URxvt.cursorBlink: 		true
URxvt.scrollBar: 		false
URxvt.transparent: 		true
URxvt.cursorUnderline:  false
URxvt.internalBorder: 	2

! disable default bindings
URxvt.iso14755:			false
URxvt.iso14755_52:		false

! loading perl extentions
URxvt.perl-ext-common:	resize-font,default,clipboard

! resize-font
URxvt.resize-font.smaller: C-j
URxvt.resize-font.bigger:  C-k

! copy-paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy
URxvt.keysym.Shift-Control-V:   perl:clipboard:paste
URxvt.clipboard.autocopy:		true

URxvt.fading: 0
URxvt.tintColor: #ffffff
URxvt.shading: 0
URxvt.inheritPixmap: False

