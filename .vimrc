" -=========-
" |  VIMRC  |
" -=========-

syntax on
set encoding=utf-8
set number relativenumber
set shiftwidth=4
set tabstop=4
set softtabstop=4
set smartindent
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch

" splits to open at bottom and right
set splitbelow splitright

colorscheme delek

